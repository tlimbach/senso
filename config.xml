<?xml version='1.0' encoding='utf-8'?>
<widget id="de.schrebergartensolutions.senso" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Senso</name>
    <description>
        A classical game of listen and reproduce a sequence of tones and lights in correct order. The game is a good training for the player's short-term memory skills.
    </description>
    <author email="" href="https://github.com/tlimbach">
        Thorsten Limbach <!-- from LICENSE file -->
    </author>
    <author email="Merkel.Oliver@web.de" href="https://github.com/OMerkel">
        Oliver Merkel
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="33" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splashscreen.png" />
        <preference name="SplashScreenDelay" value="4000" />
        <preference name="AndroidWindowSplashScreenBackground" value="#000000" />
        <icon density="ldpi" src="www/img/icons/senso32.png" />
        <icon density="mdpi" src="www/img/icons/senso48.png" />
        <icon density="hdpi" src="www/img/icons/senso64.png" />
        <icon density="xhdpi" src="www/img/icons/senso90.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
